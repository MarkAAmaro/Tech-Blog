<main class="container container-fluid mt-5">
    <section class="blog-posts-section">
        <h1>Your Blog Posts</h1>

        <form class="new-post-form">
            <div class="form-group">
                <label for="post-title">Title:</label>
                <input id="post-title" type="text" name="title" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="post-content">Content:</label>
                <textarea id="post-content" name="content" class="form-input" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Create Post</button>
        </form>

        <div class="post-list">
            {{#each blogs}}
                <article class="post-preview">
                    <h2>{{this.title}}</h2>
                    <p class="post-preview-content">{{this.content}}</p>
                    <div class="post-preview-actions">
                        <button data-id="{{this.id}}" class="delete-post btn btn-danger">Delete</button>
                        <a href="/dashboard/edit/{{this.id}}" class="edit-post btn btn-primary">Edit</a>
                    </div>
                </article>
            {{/each}}
        </div>
    </section>

    {{#if logged_in}}
        <script src="/text.js"></script>
    {{/if}}
</main>